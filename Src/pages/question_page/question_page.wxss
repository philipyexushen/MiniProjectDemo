}
.answer-area{
  top: 28%;
  width: 100%;
  position: absolute
}
.answer-area-title{
  position: relative;
  display: flex;
  text-align: center;
  justify-content:center; 
  align-items:center;
  font-size: small;
}
.answer-area-problem-content-area{
  position: relative;
  display: flex;
