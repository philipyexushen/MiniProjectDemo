/* pages/ranklist/ranklist.wxss */
page{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
  /* background-color: #05d3ab; */
}

.container {
  height: 100%;
  margin-top: auto;
  display: flex;
  flex-direction: column;
  position:relative;
  align-items: center;
  font-size: 32rpx;
  box-sizing: border-box;
}

view{
  width: 100%;
  position: relative;
}
/* background image */
.img-background{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -999;
}

/* split line */
.line-h{
  position: relative;
  display: flex;
  height:3rpx;
  width: 80%;
  margin: 0 auto;
  margin-bottom: 18rpx;
  background-color: #effcf9;
}
.line-h > image {
  width: 100%;
  height: 100%;
}
/* text */
.text-hl{
  font-size: 150%;
  color: #fff732;
}
.text-big{
  font-size: 150%;
}

.title{
  margin: 16rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* Nav table */
.NavTable{
  /* margin: 0 5% 0 5%; */
  padding: 0 12% 0 10%; 
  overflow: hidden;
  width: 78%;
  height: 72rpx;
  color: #ffffff;
}
.NavTable ::-webkit-scrollbar {
  height: 0px;
  width: 0px;
  color: transparent;
}

.NavTable-item {
  padding: 0 16rpx;
  margin: auto 2rpx;
  display: inline;
  line-height: 72rpx; /*与父元素的height 相同*/
  white-space: nowrap;
}

/* rank-list */
.rank-list{
  margin: 0 auto;
  padding-bottom: auto;
  height: 75%;
}

/* userinfo */
.userinfo {
  position: absolute;

  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 999;
}

.userinfo-avatar {
  width: 72rpx;
  height: 72rpx;
  margin: 20rpx;
  background-color: #3cd1b4; 
  border: 18rpx solid #3cd1b4;
  border-radius: 50%;
}
.userinfo-avatar-img {
  position: absolute;
  width: 116%;
  height: 116%;
  left: -8%;
  top: -8%;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo-avatar-bg{
  width: 150%;
  height: 150%;
  position: absolute;
  left: -25%;
  top: -25%;
  border-radius: 20rpx;
  border-radius: 50%;
  z-index: -998;
}

.user-info-avatar > .userinfo-avatar-img {
  position: relative;
  display: block;
  height: 64rpx;
  width: 64rpx;
  margin: 0 auto;
  border-radius: 50%;
}

.userinfo-avatar-decl{
  position: absolute;
  /* size: 20%; */
  width: 50%;
  height: 35%;
  top: -50%;
  left: 25%;
}
.userinfo-nickname {
  
}

/* swiper-tab */
.tab-content{
  position: relative;
  margin: auto;
  margin-top: 72rpx;
  width: 80%;
  height: 88%;
}

.tab-item{

}

.tab-item > image.img-background{
  left : 3%;
  width: 94%;
}

.user-rank-show {
  display: flex;
  flex-direction: row;
  width: 90%;
  margin-top: 128rpx;
  padding: 0 5%;
}

.data-group{
  text-align: center;
}

.data-group > view{
  margin: 12rpx 0;
}

/* scroll */
.user-info-scroll {
  width: 80%;
  height: 55%;
  margin: 6rpx auto;
}
.no-data-helper{
  height: 100%;
  
  position: relative;
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content:center; 
  align-items:center;
}
/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/
.user-info-scroll ::-webkit-scrollbar {
  width: 12rpx;
}
/*定义滚动条轨道 内阴影+圆角*/
.user-info-scroll ::-webkit-scrollbar-track {
  border-radius: 10px;
  background-color: #c4d6d2;
}
/*定义滑块 内阴影+圆角*/
.user-info-scroll ::-webkit-scrollbar-thumb {
  border-radius: 2px;
  background-color: #05d3ab;
}

.user-info-group {
  font-size: 20rpx;
  margin: 16rpx 0;
  display: flex;
  justify-content: center;
  align-content: center;
}

.user-info-group > view {
  position: relative;
  text-align: center;
  display: inline;
  margin: auto 1rpx;
}


/* nav-btn */
.nav{
  position: relative;
  height: 120rpx;
  text-align: center;
  line-height: 90rpx;
  margin: auto 0;
}

.nav > button {
  display: inline-block;
  background-color:  #00000000;
  white-space: nowrap;
  overflow: hidden;
}