<template name="giftsDialogView">
  <view class="dialog {{ showGiftsPage ? 'dialog_show' : '' }}">
    <view class="dialog_mask" bindtap="onClickedGiftsDialogView" />
    <view class="dialog_container">
      <!--  //此区域自定义视图  -->
      <scroll-view wx:if="{{!isDownloadingGiftsPage && gifts_rolls!=null && gifts_rolls.length != 0}}" class="flex_Center" style="height:500rpx;background:#fff2d3;" scroll-y="true">
        <block wx:for="{{gifts_rolls}}" wx:key="*this"> 
          <view class='gifts_page_item'>
            <image src='{{item}}' style='width:100%;height: 100%;'></image>
          </view>
        </block>
      </scroll-view>
      <view wx:else style="height:600rpx;">
          <image src='{{emptyRollsPageSrc}}' style='width:100%;height: 100%;'></image>
      </view>
    </view>
  </view>
</template>

<template name="failedDialog">
  <view class="dialog {{ show ? 'dialog--show' : '' }}">
    <view class="dialog__mask"/>
     <view class="dialog__container" style="display:flex;align-items:center;justify-content:center;flex-direction:column;"> 
        <!--  //此区域自定义视图  -->
        <view class="flex_Center" style="width:560rpx;height:640rpx;">
          <image src='{{failedDialogBackgroundSrc}}' style="width:560rpx;height:640rpx;"/>
        </view>
    </view> 
  </view>
</template>